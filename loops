----------------------------------------------------------------------------------------------------------------------
Simple Loop

declare
n number(10):= 1;
begin
loop
dbms_output.put_line(n);
n:= n+1;
exit when (n > 10 );
end loop;
end;
/

--------------------------------------------------------------------------------------------------------------------------

While Loop

declare
a number(10):= 1;
begin
while ( a < 10 )
loop
dbms_output.put_line(a);
a:= a+1;
end loop;
end;
/

----------------------------------------------------------------------------------------------------------------------------
For Loop

declare
begin
for a in 1 .. 5
loop
dbms_output.put_line(a);
end loop;
end;
/
